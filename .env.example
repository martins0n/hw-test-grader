# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REPO=username/homework-submissions

# Google Classroom
GOOGLE_CLASSROOM_CREDENTIALS=credentials.json

# Course IDs to monitor (comma-separated)
# The system will automatically discover and grade ALL assignments from these courses
COURSE_IDS=123456789,987654321

# Encryption
# Set to true to use a single default key for all students (simpler setup)
# Set to false to use per-student keys (more secure, requires ENCRYPTION_KEYS secret)
USE_DEFAULT_ENCRYPTION_KEY=true

# Logging
LOG_LEVEL=INFO
